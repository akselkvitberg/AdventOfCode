let getCoordinateOf char (input:string) = 
    input
    |> GetLines
    |> Seq.mapi (fun y v -> v |> Seq.mapi (fun x c -> (y,x),c))
    |> Seq.collect id
    |> Seq.find (fun (p, v) -> v = char)
    |> fst

