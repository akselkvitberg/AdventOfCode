#!fsharp

let drawPipes visited nodes = 
    let xMax = nodes |> Map.keys |> Seq.map fst |> Seq.max
    let yMax = nodes |> Map.keys |> Seq.map fst |> Seq.max

    [
        for y in [0..yMax] do
        [|
            for x in [0..xMax] do
            match List.contains (x,y) visited, nodes |> Map.tryFind (x,y) with
            | true, Some [N;S] -> '┃'
            | true, Some [E;W] -> '━'
            | true, Some [N;E] -> '┗'
            | true, Some [N;W] -> '┛'
            | true, Some [S;W] -> '┓'
            | true, Some [S;E] -> '┏'
            | true, Some [N;S;E;W] -> '╋'
            | false, Some [N;S] -> '│'
            | false, Some [E;W] -> '─'
            | false, Some [N;E] -> '└'
            | false, Some [N;W] -> '┘'
            | false, Some [S;W] -> '┐'
            | false, Some [S;E] -> '┌'
            | false, Some [N;S;E;W] -> '┼'
            | _ -> ' '
        |] 
        |> String
    ] |> fun x -> String.Join("\n", x)

