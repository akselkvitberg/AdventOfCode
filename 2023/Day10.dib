type Connection = N | S | E | W

#!fsharp

let parseSymbol v = 
    match v with 
    | '|' -> Some [N;S]
    | '-' -> Some [E;W]
    | 'L' -> Some [N;E]
    | 'J' -> Some [N;W]
    | '7' -> Some [S;W]
    | 'F' -> Some [S;E]
    | 'S' -> Some [N;S;E;W]
    | _ -> None

let parse input = 
    input
    |> GetLines
    |> Seq.map (Seq.indexed) |> Seq.indexed
    |> Seq.collect (fun (y, row) -> row |> Seq.choose (fun (x, v) -> parseSymbol v |> Option.map (fun pipe -> (x,y), pipe)))
    |> Map.ofSeq

